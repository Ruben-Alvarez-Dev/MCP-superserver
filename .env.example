# ============================================================
# MCP-SUPERSERVER - Environment Configuration
# ============================================================
# Copy this file to .env and customize values for your setup
# DO NOT commit .env to version control

# ============================================================
# NEO4J CONFIGURATION
# ============================================================
NEO4J_VERSION=5.15.0
NEO4J_PASSWORD=change_me_in_production
NEO4J_AUTH=neo4j/change_me_in_production
NEO4J_dbms_memory_heap_initial__size=512m
NEO4J_dbms_memory_heap_max__size=2G

# ============================================================
# OLLAMA CONFIGURATION
# ============================================================
OLLAMA_VERSION=latest
# Models to auto-pull on first install
OLLAMA_MODELS=llama3.3,qwq,codellama,deepseek-coder,llava,nomic-embed-text
# Enable GPU acceleration (requires nvidia-docker)
OLLAMA_GPU_ENABLED=false

# ============================================================
# MCP HUB CONFIGURATION
# ============================================================
MCP_HUB_PORT=3000
MCP_HUB_HOST=0.0.0.0
MCP_HUB_LOG_LEVEL=info
# Options: debug, info, warn, error

# ============================================================
# LOGGING CONFIGURATION
# ============================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30

# ============================================================
# BACKUP CONFIGURATION
# ============================================================
# Cron schedule: "0 2 * * *" = daily at 2 AM
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=true
BACKUP_LOCATION=./exports

# ============================================================
# OBSIDIAN VAULT
# ============================================================
OBSIDIAN_VAULT_PATH=/data/obsidian
# Log file naming pattern
OBSIDIAN_LOG_PATTERN=Log_Global_{date}.md
# Date format for logs (strftime format)
OBSIDIAN_DATE_FORMAT=%Y-%m-%d

# ============================================================
# PROTOCOL OMEGA (AI Governance)
# ============================================================
PROTOCOL_OMEGA_ENABLED=true
PROTOCOL_OMEGA_ENFORCE=true
# Require logging for all actions
PROTOCOL_OMEGA_STRICT_MODE=true

# ============================================================
# MONITORING
# ============================================================
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# ============================================================
# DEVELOPMENT / PRODUCTION
# ============================================================
ENVIRONMENT=production
DEBUG=false

# ============================================================
# SECURITY
# ============================================================
# Generate random strings with: openssl rand -hex 32
SESSION_SECRET=change_me_in_production
API_KEY=change_me_in_production
